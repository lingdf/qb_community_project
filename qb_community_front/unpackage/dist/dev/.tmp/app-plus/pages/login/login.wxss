
.login-header{
	position: relative;
	width: 100%;
}
.login-header image{
	width: 100%;
}
.login-header .icon{
	position: absolute;
	top: 20rpx;
	left: 25rpx;
	font-size: 45rpx;
	font-weight: bold;
}
.user-resetpwd{
	margin-top: 30rpx;
	padding: 0 10rpx;
	color: #999;
}
.user-resetpwd button{
	width: 84%;
	margin: 30rpx auto;
	background: #ffe933;
	color: #333333;
}
.user-resetpwd input{
	padding: 25rpx 10rpx;
	padding-right: 160rpx;
	font-weight: 700;
}
.zh>input{
	padding: 25rpx 10rpx !important;
}
.login-pwd-box{
	position: relative;
}
.login-pwd-box .forget{
	right: 15rpx;
	top:50%;
	height: 60rpx;
	position: absolute;
	font-size: 28rpx;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
	width: 150rpx;
	background: #ffe933;
	text-align: center;
	line-height: 60rpx;
	border-radius: 5rpx;
	color: #999;
}
.login-pwd-box .yzm{
	background: #666;
}
.login-name-box{
	position: relative;
}
.login-name-box .phone{
	position: absolute;
	font-size: 40rpx;
	top: 50%;
	-webkit-transform: translateY(-53.3%);
	    -ms-transform: translateY(-53.3%);
	        transform: translateY(-53.3%);
	font-weight: 700;
	color: #333;
}
.login-name-box>input{
	padding-left: 80rpx;
}
.btn-hover-class{
	background: #f4f4f4 !important;
	color: #666 !important;
}
.user-set-logout-dis{
	background: #f4f4f4 !important;
	color: #999 !important;
}
.uni-input{
	padding-left: 30rpx;
	height: 60rpx;
	border-bottom: 1rpx solid #eee;
	font-size:32rpx;
}
.code-login{
	padding: 10rpx 60rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	    -ms-flex-pack: end;
	        justify-content: flex-end;
	height: 50rpx;
}
.code-login>view{
	color: #999;
}
.code-login>view:first-child{
	font-size: 28rpx;
}
.code-login>view:last-child{
	font-size: 30rpx;
}
.other-login{
	margin-top: 20rpx;
}
.other-login .tit{
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	font-size: 32rpx;
	color: #999;
}
.other-login .tit::before,.other-login .tit::after{
	position: absolute;
	display: block;
	content: '';
	height: 1rpx;
	width:100rpx;
	background: #999;
	top: 50%;
}
.other-login .tit::before{
	left: 25%;
}
.other-login .tit::after{
	right: 25%;
}
.service-protocol{
	font-size: 28rpx;
	color: #999;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	padding: 20rpx 0;
}

